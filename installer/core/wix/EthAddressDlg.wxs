<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
   <Fragment>
      <UI>
         <Dialog Id="EthAddrDlg" Width="370" Height="265" Title="!(loc.InstallDirDlg_Title)">
            <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Text="!(loc.WixUINext)"/>
            <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
            <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
               <Publish Event="SpawnDialog" Value="CancelDlg" />
            </Control>

            <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.EthAddrDlgDescription)" />
            <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.EthAddrDlgTitle)" />
            <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
            <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
            <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

            <Control Id="EthAddrLabel"       Type="Text" X="20" Y="55" Width="320" Height="15" NoPrefix="yes" Text="!(loc.EthAddrDlgEthAddrLabel)" />
            <Control Id="EthAddr"            Type="Edit" X="20" Y="70" Width="320" Height="18" Property="WIXUI_ETHEREUM_ADDRESS" Indirect="yes" />

            <Control Id="AuthTokenLabel"     Type="Text" X="20" Y="95" Width="320" Height="15" NoPrefix="yes" Text="!(loc.EthAddrDlgAuthTokenLabel)" />
            <Control Id="AuthToken"          Type="Edit" X="20" Y="110" Width="320" Height="18" Property="WIXUI_AUTH_TOKEN" Indirect="yes" />
            
            <Control Id="GPUIDLabel"         Type="Text" X="20" Y="135" Width="250" Height="15" NoPrefix="yes" Text="!(loc.EthAddrDlgGPUIDLabel)"  ToolTip="!(loc.EthAddrDlgGPUIDLabel  )" />
            <Control Id="ShowGPUDetails"     Type="PushButton" X="280" Y="133" Width="56" Height="15" Text="!(loc.EthAddrDlgGPUDetailsBtnLabel)" >
               <Publish Event="SpawnDialog" Value="GPUDetailsDlg" />
            </Control>
            <Control Id="GPUID"              Type="Edit" X="20" Y="150" Width="320" Height="18" Property="WIXUI_GPU_IDS" Indirect="yes" />
            <Control Id="MaxSessionsLabel"   Type="Text" X="20" Y="175" Width="320" Height="15" NoPrefix="yes" Text="!(loc.EthAddrDlgMaxSessionsLabel)" />
            <Control Id="MaxSessions" Type="ComboBox" ComboList="yes" X="20" Y="190" Width="320" Height="18" Property="MAX_SESSIONS" Sorted="yes">
               <ComboBox Property="MAX_SESSIONS">
                  <ListItem Value="1"/>
                  <ListItem Value="2" />
                  <ListItem Value="3" />
                  <ListItem Value="4" />
                  <ListItem Value="5" />
                  <ListItem Value="6" />
                  <ListItem Value="7" />
                  <ListItem Value="8" />
                  <ListItem Value="9" />
                  <ListItem Value="10" />
               </ComboBox>
            </Control>

             
         </Dialog>
      </UI>
   </Fragment>
</Wix>
