<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Fragment>
        <UI>
            <Dialog Id="ExitDialog_VM" Width="370" Height="270" Title="!(loc.ExitDialog_Title)">
                <Control Id="Finish" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Cancel="yes" Text="!(loc.WixUIFinish)" >
                    <Publish Event="DoAction" Value="RunViewLogsScript" Condition="(NOT Installed) AND (LAUNCHLOGSONEXIT = 1)"/>
                </Control>
                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Disabled="yes" Text="!(loc.WixUICancel)" />
                <Control Id="Bitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="234" TabSkip="no" Text="!(loc.ExitDialogBitmap)" />
                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Disabled="yes" Text="!(loc.WixUIBack)" />
                <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" /><!-- 234 v 200 -->
                <Control Id="InstallDescription" Type="Text" X="135" Y="50" Width="220" Height="40" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogDescription)"  HideCondition="Installed" ShowCondition="(NOT Installed)"/>
                <Control Id="UninstallDescription" Type="Text" X="135" Y="50" Width="220" Height="40" Transparent="yes" NoPrefix="yes" Text="!(loc.UninstallExitDialogDescription)"  HideCondition="Not Installed" ShowCondition="Installed"/>
                <Control Id="Title" Type="Text" X="135" Y="20" Width="220" Height="60" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogTitle)" />


                <Control Id="PatchingInstructions" Type="Text" X="135" Y="80" Width="220" Height="110" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDlgInstructions)" HideCondition="Installed" ShowCondition="(NOT Installed)"/>

                <Control Id="ShowLogs" Type="PushButton" X="135" Y="205" Width="80" Height="17" Text="!(loc.ExitDlgPatchingShowLogs)" HideCondition="Installed" ShowCondition="(NOT Installed)">
                    <Publish Event="DoAction" Value="RunViewLogsScriptFromBtn"/>
                </Control>

                <Control Id="ShowPatchesFolder" Type="PushButton" X="225" Y="205" Width="80" Height="17" Text="!(loc.ExitDlgPatchingShowApp)" HideCondition="Installed" ShowCondition="(NOT Installed)">
                    <Publish Event="DoAction" Value="ShowPatchesFolder"/>
                </Control>

                <!--Control Id="LaunchPatchVideo" Type="PushButton" X="200" Y="215" Width="150" Height="17"  Text="!(loc.ExitDlgPatchingVideoLink)" ShowCondition="(NOT Installed)">
                    <Publish Event="DoAction" Value="LaunchPatchVideo"/>
                </Control-->

                <Control Id="LaunchCheckBox" Type="CheckBox" X="10" Y="243" Width="170" Height="17" Property="LAUNCHLOGSONEXIT" Hidden="yes" CheckBoxValue="1" Text="[WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT]" HideCondition="Installed" ShowCondition="NOT Installed"/>
            </Dialog>

            <InstallUISequence>
                <Show Dialog="ExitDialog_VM" OnExit="success" Overridable="yes" />
            </InstallUISequence>
        </UI>
    </Fragment>
</Wix>
